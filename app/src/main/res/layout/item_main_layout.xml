<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="5dp"
    android:layout_marginBottom="@dimen/dimen_5_dip"
    android:layout_marginTop="@dimen/dimen_5_dip"
    card_view:cardElevation="2dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_10_dip"
    android:orientation="vertical">

    <TextView
        android:id="@+id/content_Tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:layout_marginLeft="@dimen/dimen_10_dip"
        android:padding="@dimen/dimen_10_dip"
        android:gravity="center_vertical"
        android:text="你好"
        android:textSize="@dimen/dimen_34_dip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dimen_50_dip"
            android:layout_height="@dimen/dimen_50_dip"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:alpha="0.5"
            android:src="@drawable/clock" />

        <TextView
            android:id="@+id/date_Tv"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_height="@dimen/dimen_50_dip"
            android:text="nihao"
            android:textColor="#ccc"
            android:gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>